<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import editor.EditorTextArea?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="editor.EditorController" fx:id="borderPane">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem onAction="#onNew" text="New" />
                        <MenuItem onAction="#onNewWindow" text="New Window" />
                        <MenuItem onAction="#onOpen" text="Open..." />
                        <MenuItem onAction="#onSave" text="Save" />
                        <MenuItem onAction="#onSaveAs" text="Save As..." />
                        <SeparatorMenuItem />
                        <MenuItem onAction="#onExit" text="Exit" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem disable="true" text="Undo" />
                        <SeparatorMenuItem />
                        <MenuItem disable="true" text="Cut" />
                        <MenuItem disable="true" text="Copy" />
                        <MenuItem disable="true" text="Paste" />
                        <MenuItem disable="true" text="Delete" />
                        <SeparatorMenuItem />
                        <MenuItem disable="true" text="Find..." />
                        <MenuItem disable="true" text="Find Next" />
                        <MenuItem disable="true" text="Find Previous" />
                        <MenuItem disable="true" text="Replace" />
                        <SeparatorMenuItem />
                        <MenuItem onAction="#onSelectAll" text="Select All" />
                    </items>
                </Menu>
                <Menu text="View">
                    <items>
                        <Menu text="Zoom">
                            <items>
                                <MenuItem onAction="#onZoomIn" text="Zoom In" />
                                <MenuItem onAction="#onZoomOut" text="Zoom Out" />
                                <MenuItem onAction="#onRestoreZoom" text="Restore Default Zoom" />
                            </items>
                        </Menu>
                        <CheckMenuItem onAction="#onWordWrap" text="Word Wrap" />
                        <CheckMenuItem onAction="#onStatusBar" text="Status Bar" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem onAction="#onAbout" text="About Jotr" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <EditorTextArea fx:id="textArea" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>
    <bottom>
        <HBox fx:id="statusBar" alignment="BOTTOM_RIGHT" BorderPane.alignment="BOTTOM_CENTER">
            <children>
            <Separator orientation="VERTICAL" prefWidth="10.0" />
                <Label disable="true" text="Ln 0, Col 0">
               <padding>
                  <Insets right="70.0" />
               </padding></Label>
            <Separator orientation="VERTICAL" prefWidth="0.0">
               <padding>
                  <Insets left="2.0" right="2.0" />
               </padding>
            </Separator>
            <Label fx:id="zoomLabel" text="100%">
               <padding>
                  <Insets right="10.0" />
               </padding>
            </Label>
            <Separator layoutX="568.0" layoutY="12.0" orientation="VERTICAL" prefWidth="0.0">
               <padding>
                  <Insets right="80.0" />
               </padding>
            </Separator>
            </children>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
