<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.reiprojects.notepad3.EditorController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem onAction="#onNew" text="New"/>
                        <MenuItem onAction="#onOpen" text="Open..."/>
                        <MenuItem onAction="#onSave" text="Save"/>
                        <MenuItem onAction="#onSaveAs" text="Save As..."/>
                        <SeparatorMenuItem/>
                        <MenuItem onAction="#onExit" text="Exit"/>
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Undo"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Cut"/>
                        <MenuItem text="Copy"/>
                        <MenuItem text="Paste"/>
                        <MenuItem text="Delete"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Find..."/>
                        <MenuItem text="Find Next"/>
                        <MenuItem text="Find Previous"/>
                        <MenuItem text="Replace"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Select All"/>
                    </items>
                </Menu>
                <Menu text="View">
                    <items>
                        <Menu text="Zoom">
                            <items>
                                <MenuItem onAction="#onZoomIn" text="Zoom In"/>
                                <MenuItem onAction="#onZoomOut" text="Zoom Out"/>
                                <MenuItem onAction="#onRestoreZoom" text="Restore Default Zoom"/>
                            </items>
                        </Menu>
                        <CheckMenuItem onAction="#onWordWrap" text="Word Wrap"/>
                        <CheckMenuItem onAction="#onStatusBar" text="Status Bar"/>
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TextArea fx:id="textArea" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <HBox fx:id="statusBar" BorderPane.alignment="BOTTOM_CENTER">
            <children>
                <Label text="Label [PLACEHOLDER]"/>
            </children>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
